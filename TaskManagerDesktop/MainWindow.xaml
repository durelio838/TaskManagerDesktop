<Window x:Class="TaskManagerDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TaskManagerDesktop"
        xmlns:conv="clr-namespace:TaskManagerDesktop.Converters"
        Title="TaskManager - Управление задачами"
        Height="700" Width="1200"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <conv:PriorityToBrushConverter x:Key="PriorityToBrushConverter"/>
        <conv:PriorityDisplayConverter x:Key="PriorityDisplayConverter"/>
        <Style x:Key="WrapTextBlockStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">

        <!-- Меню -->
        <Menu DockPanel.Dock="Top" Background="#F0F0F0">
            <MenuItem Header="_Файл">
                <MenuItem Header="_Создать задачу" Click="AddTaskMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="_Выход" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Задачи">
                <MenuItem Header="_Добавить" Click="AddTaskMenuItem_Click"/>
                <MenuItem Header="_Редактировать" Click="EditTaskMenuItem_Click"/>
                <MenuItem Header="_Удалить" Click="DeleteTaskMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Вид">
                <MenuItem Header="Группировать по приоритету"
                          x:Name="GroupByPriorityCheckBox"
                          IsCheckable="True" IsChecked="False"
                          Click="GroupByPriorityCheckBox_Click"/>
            </MenuItem>
            <MenuItem Header="_Справка">
                <MenuItem Header="_О программе"/>
            </MenuItem>
        </Menu>

        <!-- Панель инструментов -->
        <ToolBar DockPanel.Dock="Top" Background="#E8E8E8">
            <Button Content="➕ Добавить" Click="AddTaskButton_Click" Padding="10,5"/>
            <Button Content="✏️ Изменить" Click="EditTaskButton_Click" Padding="10,5"/>
            <Button Content="🗑️ Удалить" Click="DeleteTaskButton_Click" Padding="10,5"/>
            <Separator/>
            <Button Content="🔄 Обновить" Click="RefreshButton_Click" Padding="10,5"/>
        </ToolBar>

        <!-- Строка состояния -->
        <StatusBar DockPanel.Dock="Bottom" Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock x:Name="StatusDateText" Text="Дата: -"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="TotalTasksText" Text="Всего задач: 0"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="CompletedTasksText" Text="Выполнено: 0"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="StatusText" Text="Готово" Foreground="Green"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Основная область -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>

            <!-- GridSplitter -->
            <GridSplitter Grid.Column="1" Width="5"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="#CCCCCC"
                          ShowsPreview="True"
                          ResizeBehavior="PreviousAndNext"/>

            <!-- Левая панель: Детали задачи -->
            <Border Grid.Column="0" Background="White" Padding="10"
                    BorderBrush="#DDD" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Детали задачи" FontSize="18"
                                   FontWeight="Bold" Margin="0,0,0,15"
                                   Foreground="#2196F3"/>

                        <TextBlock Text="Название:" FontWeight="Bold"
                                   Foreground="#555" Margin="0,5,0,2"/>
                        <TextBlock x:Name="DetailTitle" Text="-"
                                   TextWrapping="Wrap" Margin="0,0,0,10"/>

                        <TextBlock Text="Описание:" FontWeight="Bold"
                                   Foreground="#555" Margin="0,5,0,2"/>
                        <TextBlock x:Name="DetailDescription" Text="-"
                                   TextWrapping="Wrap" Margin="0,0,0,10"/>

                        <TextBlock Text="Приоритет:" FontWeight="Bold"
                                   Foreground="#555" Margin="0,5,0,2"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Ellipse x:Name="DetailPriorityColor"
                                     Width="16" Height="16"
                                     Fill="Gray" Margin="0,0,8,0"
                                     VerticalAlignment="Center"/>
                            <TextBlock x:Name="DetailPriority" Text="-"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Text="Категория:" FontWeight="Bold"
                                   Foreground="#555" Margin="0,5,0,2"/>
                        <TextBlock x:Name="DetailCategory" Text="-"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Срок выполнения:" FontWeight="Bold"
                                   Foreground="#555" Margin="0,5,0,2"/>
                        <TextBlock x:Name="DetailDueDate" Text="-"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Статус:" FontWeight="Bold"
                                   Foreground="#555" Margin="0,5,0,2"/>
                        <TextBlock x:Name="DetailStatus" Text="-"
                                   FontWeight="Bold" Margin="0,0,0,10"/>

                        <TextBlock Text="Дата создания:" FontWeight="Bold"
                                   Foreground="#555" Margin="0,5,0,2"/>
                        <TextBlock x:Name="DetailCreatedDate" Text="-"
                                   Margin="0,0,0,10"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Правая панель: Список задач -->
            <Grid Grid.Column="2" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Панель фильтров -->
                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Поиск и фильтры:"
                               FontWeight="Bold" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="SearchTextBox" Grid.Column="0"
                                 Padding="6,4"
                                 VerticalContentAlignment="Center"
                                 TextChanged="SearchTextBox_TextChanged"/>

                        <ComboBox x:Name="FilterComboBox" Grid.Column="1"
                                  Width="150" Margin="5,0,0,0"
                                  VerticalContentAlignment="Center"
                                  SelectionChanged="FilterComboBox_SelectionChanged">
                            <ComboBoxItem Content="Все задачи" IsSelected="True"/>
                            <ComboBoxItem Content="Активные"/>
                            <ComboBoxItem Content="Выполненные"/>
                            <ComboBoxItem Content="Высокий приоритет"/>
                            <ComboBoxItem Content="Просроченные"/>
                        </ComboBox>

                        <ComboBox x:Name="SortComboBox" Grid.Column="2"
                                  Width="150" Margin="5,0,0,0"
                                  VerticalContentAlignment="Center"
                                  SelectionChanged="SortComboBox_SelectionChanged">
                            <ComboBoxItem Content="По дате создания" IsSelected="True"/>
                            <ComboBoxItem Content="По приоритету"/>
                            <ComboBoxItem Content="По сроку"/>
                            <ComboBoxItem Content="По названию"/>
                            <ComboBoxItem Content="По категории"/>
                        </ComboBox>
                    </Grid>
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid x:Name="TasksDataGrid" Grid.Row="1"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          SelectionChanged="TasksDataGrid_SelectionChanged"
                          GridLinesVisibility="Horizontal"
                          AlternatingRowBackground="#F9F9F9"
                          RowHeight="50"
                          IsReadOnly="True"
                          BorderBrush="#DDD"
                          BorderThickness="1">

                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="✏️ Редактировать"
                                      Click="EditTaskMenuItem_Click"/>
                            <MenuItem Header="🗑️ Удалить"
                                      Click="DeleteTaskMenuItem_Click"/>
                            <Separator/>
                            <MenuItem Header="✓ Отметить выполненной"
                                      Click="MarkCompletedMenuItem_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>

                    <DataGrid.Columns>

                        <DataGridCheckBoxColumn Header="✓" Width="40"
                                                Binding="{Binding IsCompleted}"
                                                IsReadOnly="True"/>

                        <DataGridTemplateColumn Header="Приоритет" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                Margin="4,0">
                                        <Ellipse Width="12" Height="12"
                                                 Fill="{Binding Priority, Converter={StaticResource PriorityToBrushConverter}}"
                                                 Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding Priority, Converter={StaticResource PriorityDisplayConverter}}"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Название" Width="200"
                                            Binding="{Binding Title}"/>

                        <DataGridTextColumn Header="Описание" Width="*"
                                            Binding="{Binding Description}"
                                            ElementStyle="{StaticResource WrapTextBlockStyle}"/>

                        <DataGridTextColumn Header="Категория" Width="120"
                                            Binding="{Binding Category.Name}"/>

                        <DataGridTextColumn Header="Срок" Width="100"
                                            Binding="{Binding DueDate, StringFormat=dd.MM.yyyy}"/>

                        <DataGridTemplateColumn Header="Статус" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding StatusDisplay}"
                                               Foreground="{Binding StatusColor}"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               Margin="4,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
