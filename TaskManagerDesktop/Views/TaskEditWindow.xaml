<Window x:Class="TaskManagerDesktop.Views.TaskEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование задачи"
        Width="500" Height="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
			<StackPanel Margin="0,0,0,10">
				<TextBlock Text="Название" FontWeight="Bold" Margin="0,0,0,3"/>
				<TextBox Text="{Binding Task.Title, UpdateSourceTrigger=PropertyChanged}" />

				<TextBlock Text="Описание" FontWeight="Bold" Margin="0,10,0,3"/>
				<TextBox Text="{Binding Task.Description, UpdateSourceTrigger=PropertyChanged}"
                         Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

				<TextBlock Text="Приоритет" FontWeight="Bold" Margin="0,10,0,3"/>
				<ComboBox ItemsSource="{Binding Priorities}"
                          SelectedItem="{Binding Task.Priority}"
                          DisplayMemberPath="Name"/>

				<TextBlock Text="Категория" FontWeight="Bold" Margin="0,10,0,3"/>
				<ComboBox ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding Task.Category}"
                          DisplayMemberPath="Name"/>

				<TextBlock Text="Срок выполнения" FontWeight="Bold" Margin="0,10,0,3"/>
				<DatePicker SelectedDate="{Binding Task.DueDate}"/>

				<CheckBox Content="Выполнена"
                          IsChecked="{Binding Task.IsCompleted}"
                          Margin="0,10,0,0"/>
			</StackPanel>
		</ScrollViewer>

		<StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,10,0,0">
			<Button Content="OK" Width="90" Margin="0,0,10,0"
                    IsDefault="True"
                    Click="OkButton_Click"/>
			<Button Content="Отмена" Width="90"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
		</StackPanel>
	</Grid>
</Window>
